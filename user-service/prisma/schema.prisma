generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  user_id         Int      @id @default(autoincrement())
  name            String
  avatar          String?
  email           String   @unique
  password        String
  phone_number    String?
  user_types      String[]
  wallet_address  String?
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt

  @@map("users")
}